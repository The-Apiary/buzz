= form_for @podcast do |f|
  - if @podcast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@podcast.errors.count, "error")} prohibited this podcast from being saved:"
      %ul
        - @podcast.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :feed_url
    = f.text_field :feed_url
  .actions
    = f.submit 'Save'
