%script{ type: 'text/x-handlebars' }
  / Login modal
  %div.modal.fade#signin-modal(tabindex="-1" role="dialog" aria-hidden="true")
    %div.modal-dialog
      %div.modal-content
        %div.modal-header
          %button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
          %h4.modal-title#myModalLabel Sign In
        %div.modal-body
          {{ render "signin" }}
        %div.modal-footer
          %button.btn.btn-default(type="button" data-dismiss="modal") Close

  .container
    %nav.navbar.navbar-default(role='navigation')
      .container-fluid
        / Header
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navbar-collapse")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

        / Collapsable area
        .collapse.navbar-collapse#navbar-collapse
          / Search area
          %form.navbar-form.navbar-left(role='search')
            {{ view 'Buzz.SearchBarView' }}

          / Player
          {{#with controllers.queue.current_episode }}
          {{ render 'player' this }}
          {{/with}}


          %ul.nav.navbar-nav.navbar-right
            / Login form
            %li.dropdown
              %a.dropdown-toggle(href="#" data-toggle="dropdown")
                %strong= @user.identifier
                %span.glyphicon.glyphicon-user
                %b.caret
              %ul.dropdown-menu
                %li
                  %a Unimplemented - Claim Account
                %li
                  %a Unimplemented - Info
                %li.divider
                %li
                  -# Using window.location instead of a real link because
                    otherwise the ember app doesn't render after the redirect.
                  %a(data-toggle="modal" data-target="#signin-modal")
                    Sign In
                %li
                  -# Using window.location instead of a real link because
                    otherwise the ember app doesn't render after the redirect.
                  %a(href='#' onclick="window.location='#{signout_path}'")
                    Sign Out
    .row
      .col-md-2.col-sm-2
        %ul.nav.nav-pills.nav-stacked
          -# Nested link-to's place the 'active' class on the outside li.
          -# TODO: Make this a handlebars helper
          {{#link-to-li 'recent' }}Recent{{/link-to-li}}
          {{#link-to-li 'subscriptions' }}Your Subscriptions{{/link-to-li}}
          {{#link-to-li 'podcasts' }}Podcasts{{/link-to-li}}
      .col-md-6.col-sm-6
        {{ outlet }}
      .col-md-4.col-sm-4
        {{ render "queue" }}
